-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MyGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame for layout
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.BackgroundTransparency = 0.5
frame.Parent = screenGui

-- Create a TextButton to speed up carts
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 0.5, -25)
button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
button.Text = "Speed Up All Carts"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSans
button.TextSize = 24
button.Parent = frame

-- Create an "X" button to close the GUI
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 50, 0, 50)
closeButton.Position = UDim2.new(1, -60, 0, 10) -- Position in the top right corner
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.SourceSans
closeButton.TextSize = 24
closeButton.Parent = frame

-- Function to speed up all carts
local function onButtonClick()
    for _, cart in pairs(workspace:GetChildren()) do
        if cart:IsA("Model") then
            local upButton = cart:FindFirstChild("Up")
            if upButton and upButton:IsA("Part") then
                local clickPart = upButton:FindFirstChild("Click")
                if clickPart then
                    local chngScript = clickPart:FindFirstChildWhichIsA("Script") -- Find the script that contains the function
                    if chngScript then
                        local chngFunction = chngScript:FindFirstChild("chng") -- Make sure the function is named correctly
                        if chngFunction then
                            chngFunction:Invoke() -- Call the function
                        end
                    end
                end
            end
        end
    end
end

-- Function to close the GUI
local function onCloseButtonClick()
    screenGui:Destroy() -- Remove the GUI
end

-- Connect the button clicks to their functions
button.MouseButton1Click:Connect(onButtonClick)
closeButton.MouseButton1Click:Connect(onCloseButtonClick)
